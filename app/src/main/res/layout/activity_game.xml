                android:layout_gravity="center"
                android:layout_marginLeft="46dp"
                android:background="@drawable/lingkarm"
                android:text="Level 1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="47dp"
                android:background="@drawable/putih"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_game"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="25dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/koin" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-15dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/toko"
                android:layout_marginTop="20dp"
                android:src="@drawable/piala"
                android:onClick="Piala"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/play"
                android:layout_marginTop="20dp"
                android:src="@drawable/lampu"
                android:onClick="Lampu"/>
        </LinearLayout>
